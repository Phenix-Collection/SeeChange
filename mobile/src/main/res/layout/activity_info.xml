<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.InfoActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:layout_below="@id/avatar"
        android:text="name" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="Avatar"
        app:srcCompat="@android:drawable/ic_menu_gallery"/>

    <TextView
        android:id="@+id/shortBio"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/name"
        android:text="bio" />

    <TextView
        android:id="@+id/satoshiText"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/shortBio"
        android:layout_alignLeft="@id/shortBio"
        android:text="@string/satoshi_text"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/satoshiText"
        android:layout_toStartOf="@+id/closeInfoButton"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/satoshiAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="70dp"
            android:text="Satoshi amount "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/satoshiIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-62dp"
            android:layout_toEndOf="@+id/satoshiAmount"
            android:text="ã‹›"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <ImageButton
        android:id="@+id/closeInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close" />


</RelativeLayout>